<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnSeeYourPlan"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="See Your Plan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSeeAllActivity"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="See All Activity"
        app:layout_constraintEnd_toEndOf="@+id/btnSeeYourPlan"
        app:layout_constraintStart_toStartOf="@+id/btnSeeYourPlan"
        app:layout_constraintTop_toBottomOf="@+id/btnSeeYourPlan" />

    <Button
        android:id="@+id/btnAboutUs"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="About Us"
        app:layout_constraintEnd_toEndOf="@+id/btnSeeAllActivity"
        app:layout_constraintStart_toStartOf="@+id/btnSeeAllActivity"
        app:layout_constraintTop_toBottomOf="@+id/btnSeeAllActivity" />
</androidx.constraintlayout.widget.ConstraintLayout>